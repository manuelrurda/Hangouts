<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clDropZone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/drop_zone_bg"
    android:elevation="7dp">

    <TextView
        android:id="@+id/tvDropZoneValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/glDropZoneGrid"
        app:layout_constraintEnd_toEndOf="@+id/glDropZoneGrid"
        app:layout_constraintStart_toStartOf="@+id/glDropZoneGrid"
        app:layout_constraintTop_toTopOf="@+id/glDropZoneGrid"
        tools:text="0" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/glDropZoneGrid"
        android:layout_width="@dimen/drag_drop_card_container"
        android:layout_height="@dimen/drag_drop_card_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>