<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_sun_tornado_background"
    tools:context=".homeScreen.hangoutResults.HangoutResultsFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_top_login_backcard_content"
        app:cardCornerRadius="@dimen/backcard_corner_radius"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_margin"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/based_on_your_preferences_label"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvResultsFrist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_margin"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="@dimen/results_first_place"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:text="Italian" />

            <TextView
                android:id="@+id/tvResultsSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/results_places_margin"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="@dimen/results_second_place"
                app:layout_constraintEnd_toEndOf="@+id/tvResultsFrist"
                app:layout_constraintStart_toStartOf="@+id/tvResultsFrist"
                app:layout_constraintTop_toBottomOf="@+id/tvResultsFrist"
                tools:text="Mexican" />

            <TextView
                android:id="@+id/tvResultsThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/results_places_margin"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="@dimen/results_third_place"
                app:layout_constraintEnd_toEndOf="@+id/tvResultsSecond"
                app:layout_constraintStart_toStartOf="@+id/tvResultsSecond"
                app:layout_constraintTop_toBottomOf="@+id/tvResultsSecond"
                tools:text="Chinese" />

            <Button
                android:id="@+id/btnResultsNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/content_margin"
                android:text="@string/next_label"
                android:textColor="@color/white"
                android:textSize="@dimen/button_font_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvResultsThird"
                app:layout_constraintStart_toStartOf="@+id/tvResultsThird"
                app:layout_constraintTop_toBottomOf="@+id/tvResultsThird"
                app:rippleColor="@color/midnight_blue" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="@dimen/results_medal_margin_end"
                android:src="@drawable/ic_golden_medal"
                app:layout_constraintBottom_toBottomOf="@+id/tvResultsFrist"
                app:layout_constraintEnd_toStartOf="@+id/tvResultsFrist"
                app:layout_constraintTop_toTopOf="@+id/tvResultsFrist" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/results_medal_margin_end"
                android:src="@drawable/ic_silver_medal"
                app:layout_constraintBottom_toBottomOf="@+id/tvResultsSecond"
                app:layout_constraintEnd_toStartOf="@+id/tvResultsSecond"
                app:layout_constraintTop_toTopOf="@+id/tvResultsSecond" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="@dimen/results_medal_margin_end"
                android:src="@drawable/ic_copper_medal"
                app:layout_constraintBottom_toBottomOf="@+id/tvResultsThird"
                app:layout_constraintEnd_toStartOf="@+id/tvResultsThird"
                app:layout_constraintTop_toTopOf="@+id/tvResultsThird" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>